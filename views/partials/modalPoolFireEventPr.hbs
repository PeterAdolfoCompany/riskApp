<!-- Modal -->
<div class="modal fade" id="poolFireEvent" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true"
  data-backdrop="false">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <form action="">
        <div class="modal-header" style="background-color: #82b1ff">
          <h4 class="modal-title" id="modalEventName">
            <div class="md-form form-sm">
              <input type="text" id="inputSMEx" class="form-control form-control-sm">
              <label for="inputSMEx" style="color:black">Event name</label>
            </div>
            {{!-- Nombre de la sustancia en el modal --}}
            <label id="name-chemPoolFire"></label>

          </h4>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
              <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home"
                aria-selected="true">Chemical</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile"
                aria-selected="false">Atmospheric</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact"
                aria-selected="false">Source</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="settings-tab" data-toggle="tab" href="#settings" role="tab" aria-controls="contact"
                aria-selected="false"><i class="fa fa-cog" aria-hidden="true"></i></a>
            </li>
          </ul>
          <div class="tab-content" id="myTabContent">

            {{!-- CHEMICAL --}}
            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">

              <div class="table">
                <table id="data-tablePoolFire" class="table table-hover" width="100%"></table>
              </div>

            </div>

            {{!-- ATMOSPHERIC --}}
            <div class="tab-pane fade container " id="profile" role="tabpanel" aria-labelledby="profile-tab">

              <div class="row justify-content-center mt-2">
                <label class="col-6 text-center" for="">Wind velocity</label>
                <input id="wind-velocity" class="form-control col-3 text-center" type="text" placeholder="" value="1.5">
                <select onchange="this.form.submit()" class="browser-default custom-select col-3">
                  <option value="1">m/s</option>
                  <option value="2">km/h</option>
                  <option value="3">mph</option>
                </select>
              </div>
              <div class="row justify-content-center mt-2">
                <label class="col-6 text-center" for="">Air Temperature</label>
                <input id="air-temp" class="form-control col-3 text-center" type="text" placeholder="" value="25">
                <select onchange="this.form.submit()" class="browser-default custom-select col-3">
                  <option value="1">C</option>
                  <option value="2">K</option>
                  <option value="3">F</option>
                </select>
              </div>
              <div class="row justify-content-center mt-2">
                <label class="col-6 text-center" for="">Humidity (%)</label>
                <input id="humidity" class="form-control col-3 text-center" type="text" placeholder="" value="50">
                <select class="browser-default custom-select col-3">
                  <option value="1">%</option>
                </select>
              </div>
              <div class="row justify-content-center mt-2">
                <label class="col-6 text-center" for="">Altitude (msnm)</label>
                <input id="altitude" class="form-control col-3 text-center" type="text" placeholder="" value="0">
                <select class="browser-default custom-select col-3">
                  <option value="1">msnm</option>
                </select>
              </div>

            </div>

            {{!-- SOURCE --}}
            <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
              <hr>
              <h5>Type of Leak </h5>
              <!-- Default inline 1-->
              <div class="custom-control custom-radio custom-control-inline">
                <input type="radio" class="custom-control-input" id="continuosLeak" value="continuosLeak" name="radioTypeLeak"
                  checked>
                <label class="custom-control-label" for="continuosLeak">Continuos leak</label>
              </div>

              <!-- Default inline 2-->
              <div class="custom-control custom-radio custom-control-inline">
                <input type="radio" class="custom-control-input" id="massiveLeak" value="massiveLeak" name="radioTypeLeak">
                <label class="custom-control-label" for="massiveLeak">Massive leak</label>
              </div>

              <!-- Default inline 3-->
              <div class="custom-control custom-radio custom-control-inline">
                <input type="radio" class="custom-control-input" id="circularDike" value="circularDike" name="radioTypeLeak">
                <label class="custom-control-label" for="circularDike">Circular dike</label>
              </div>

              <!-- Default inline 4-->
              <div class="custom-control custom-radio custom-control-inline">
                <input type="radio" class="custom-control-input" id="noCircularDike" value="noCircularDike" name="radioTypeLeak">
                <label class="custom-control-label" for="noCircularDike">No Circular dike</label>
              </div>
              <hr>
              {{!-- Tipo de descarga --}}
              <div class="container">
                <div id="continuosLakeDiv" class="row justify-content-center mt-2">
                  <label class="col-3 text-center" for="">Flow</label>
                  <input id="flow" class="form-control col-3 text-center" type="text" placeholder="">
                  <select class="browser-default custom-select col-3">
                    <option value="1">m3/s</option>
                    <option value="2">kg/s</option>
                    <option value="3">l/s</option>
                  </select>
                </div>
                <div id="massiveLeakDiv" class="row justify-content-center mt-2">
                  <label class="col-3 text-center" for="">Mass release</label>
                  <input id="mass-release" class="form-control col-3 text-center" type="text" placeholder="">
                  <select class="browser-default custom-select col-3">
                    <option value="1">m3</option>
                    <option value="2">l</option>
                    <option value="3">kg</option>
                  </select>
                </div>
                <div id="circularDikekDiv" class="row justify-content-center mt-2">
                  <label class="col-3 text-center" for="">Radius</label>
                  <input id="radius" class="form-control col-3 text-center" type="text" placeholder="">
                  <select class="browser-default custom-select col-3">
                    <option value="1">m</option>
                  </select>
                </div>
                <div id="noCircularDikekDiv" class="row justify-content-center mt-2">
                  <label class="col-4 text-center" for="">Height</label>
                  <input id="height-rect" class="form-control col-3 text-center" type="text" placeholder="">
                  <select class="browser-default custom-select col-3">
                    <option value="1">m</option>
                  </select>
                  <hr>
                  <label class="col-4 text-center" for="">Width</label>
                  <input id="width-rect" class="form-control col-3 text-center" type="text" placeholder="">
                  <select class="browser-default custom-select col-3">
                    <option value="1">m</option>
                  </select>
                </div>
              </div>
              <hr>
              <div class="container">
                <h5>Burning Rate Method </h5>
                <!-- Default inline 1-->
                <div class="custom-control custom-radio custom-control-inline">
                  <input type="radio" class="custom-control-input" id="strasser" name="radioBurningRateMethod" checked>
                  <label class="custom-control-label" for="strasser">Strasser</label>
                </div>

                <!-- Default inline 2-->
                <div class="custom-control custom-radio custom-control-inline">
                  <input type="radio" class="custom-control-input" id="mudan" name="radioBurningRateMethod">
                  <label class="custom-control-label" for="mudan">Mudan</label>
                </div>
                <hr>

                <h5>Flame Height Method </h5>
                <!-- Default inline 1-->
                <div class="custom-control custom-radio custom-control-inline">
                  <input type="radio" class="custom-control-input" id="thomas" name="radioFlameHeightMethod" checked>
                  <label class="custom-control-label" for="thomas">Thomas</label>
                </div>

                <!-- Default inline 2-->
                <div class="custom-control custom-radio custom-control-inline">
                  <input type="radio" class="custom-control-input" id="pritchard" name="radioFlameHeightMethod">
                  <label class="custom-control-label" for="pritchard">Pritchard</label>
                </div>
                <hr>

                <h5>Calculation Method </h5>
                <!-- Default inline 1-->
                <div class="custom-control custom-radio custom-control-inline">
                  <input type="radio" class="custom-control-input" id="pointSource" name="radioCalcMethod" checked>
                  <label class="custom-control-label" for="pointSource">Point Source</label>
                </div>

                <!-- Default inline 2-->
                <div class="custom-control custom-radio custom-control-inline">
                  <input type="radio" class="custom-control-input" id="solidSource" name="radioCalcMethod">
                  <label class="custom-control-label" for="solidSource">Solid Plume</label>
                </div>
              </div>
              <hr>
              {{!-- BOTON ADICIONA PUNTO MARKER EN EL MAPA --}}
              <div class="container">
                <div class="row justify-content-md-center">
                  <div class="col-12 col-md-auto">
                    <button type="button" class="btn btn-light-blue" data-toggle="modal" onclick=addEvent($('#inputSMEx').val())
                      data-dismiss="modal">
                      Add Point
                    </button>
                  </div>
                </div>
              </div>
            </div>

            {{!-- SETTINGS --}}
            <div class="tab-pane fade container " id="settings" role="tabpanel" aria-labelledby="profile-tab">
              <div class="row justify-content-center mt-2">
                <label class="col-6 text-center" for="">Radiation 1</label>
                <input id="rad01-val" class="form-control col-3 text-center" type="text" placeholder="" value="10">
                <select onchange="this.form.submit()" class="browser-default custom-select col-3">
                  <option value="1">kW/m2</option>
                  <option value="2">BTU/ft2</option>
                </select>
              </div>
              <div class="row justify-content-center mt-2">
                <label class="col-6 text-center" for="">Radiation 2</label>
                <input id="rad02-val" class="form-control col-3 text-center" type="text" placeholder="" value="5">
                <select onchange="this.form.submit()" class="browser-default custom-select col-3">
                  <option value="1">kW/m2</option>
                  <option value="2">BTU/ft2</option>
                </select>
              </div>
              <div class="row justify-content-center mt-2">
                <label class="col-6 text-center" for="">Radiation 3</label>
                <input id="rad03-val" class="form-control col-3 text-center" type="text" placeholder="" value="1.4">
                <select onchange="this.form.submit()" class="browser-default custom-select col-3">
                  <option value="1">kW/m2</option>
                  <option value="2">BTU/ft2</option>
                </select>
              </div>
              <div class="row justify-content-center mt-2">
                <label class="col-6 text-center" for="">Time exposition</label>
                <input id="time-exposition" class="form-control col-3 text-center" type="text" placeholder="" value="10">
                <select onchange="this.form.submit()" class="browser-default custom-select col-3">
                  <option value="1">seg</option>
                </select>
              </div>
            </div>

          </div>

        </div>

        {{!-- <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">NEXT</button>
        </div> --}}
      </form>

    </div>
  </div>
</div>