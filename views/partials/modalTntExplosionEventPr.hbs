<!-- Modal -->
<div class="modal fade" id="tntExplosionEvent" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true" data-backdrop="false">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <form action="">
        <div class="modal-header">
          <h5 class="modal-title" id="modalEventNameTnt">
            <div class="md-form form-sm">
              <input type="text" id="inputSMExTnt" class="form-control form-control-sm">
              <label for="inputSMEx">Event name</label>
            </div>
            {{!-- Nombre de la sustancia en el modal --}}
            <label id="name-chemTnt"></label>
          </h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <ul class="nav nav-tabs" id="myTabTnt" role="tablist">
            <li class="nav-item">
              <a class="nav-link active" id="home-tabTnt" data-toggle="tab" href="#homeTnt" role="tab" aria-controls="home"
                aria-selected="true">Chemical</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="contact-tabTnt" data-toggle="tab" href="#contactTnt" role="tab" aria-controls="contact"
                aria-selected="false">Source</a>
            </li>
          </ul>
          <div class="tab-content" id="myTabContentTnt">

            {{!-- CHEMICAL --}}
            <div class="tab-pane fade show active" id="homeTnt" role="tabpanel" aria-labelledby="home-tab">

               <div class="table">
                <table id="data-tableTntExplosion" class="table table-hover" width="100%"></table>
              </div>

            </div>


            {{!-- SOURCE --}}
            <div class="tab-pane fade" id="contactTnt" role="tabpanel" aria-labelledby="contact-tab">
              <hr>
              <div class="row justify-content-center mt-2">
                <label class="col-6 text-center" for="">Mass release</label>
                <input class="form-control col-3 text-center" type="text" placeholder="">
                <select class="browser-default custom-select col-3">
                  <option value="1">kg</option>
                  <option value="2">lb</option>
                  <option value="3">m3</option>
                </select>
              </div>
              <div class="row justify-content-center mt-2">
                <label class="col-6 text-center" for="">Energy fraction</label>
                <input class="form-control col-3 text-center" type="text" placeholder="">
              </div>
              <hr>
              {{!-- BOTON ADICIONA PUNTO MARKER EN EL MAPA --}}
              <div class="container">
                <div class="row justify-content-md-center">
                  <div class="col-12 col-md-auto">
                    <button type="button" class="btn btn-light-blue" data-toggle="modal" onclick=addEvent($('#inputSMExTnt').val())
                      data-dismiss="modal">
                      Add Point
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>